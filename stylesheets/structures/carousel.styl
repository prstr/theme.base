// --------
// Карусель
// --------

.carousel {
  position: relative;
  padding: 0;
  margin: 0;
  overflow: hidden;

  perspective: 1000px;
  -ms-touch-action: pan-y;
  touch-action: pan-y;

  white-space: nowrap;
}

.carousel-item {
  position: absolute;
  left: 0;
  right: 0;
  margin: 0;

  display: inline-block;
  width: 100%;
  height: 100%;
  padding: 0;
  overflow: visible;

  vertical-align: top;
  white-space: normal;
  list-style: none;
  backface-visibility: hidden;

  &.active {
    position: relative;
  }
}

.carousel[rn-carousel-transition="hexagon"] {
  overflow: visible;
}

.carousel-nav {
  text-align: center;
}

.carousel-nav-link {
  display: inline-block;
}
