//-------
// Значок
//-------
//
// ```
//  .badge
// [.badge-default | .badge-primary | .badge-action ...]
// [.badge-small | .badge-smaller | .badge-large | .badge-larger]
//   [i | checkbox]
//   span
// ```

.badge {
  position: relative;
  display: inline-block;
  box-sizing: border-box;

  padding: 0 gap-small;
  border-width: 1px;
  border-style: solid;
  border-radius: badge-radius;

  text-align: center;
}

.badge-icon {
  position: relative;
  top: -1px;
  display: inline-block;
  vertical-align: middle;
  font-size: type-smaller;
}

for c in ui-colors {
  &.badge-{c} {
    _bg = lookup('ui-' + c);
    _bd = lookup('ui-' + c + '-border');
    _tx = lookup('ui-' + c + '-text');

    background: _bg;
    border-color: _bd;
    color: _tx;

    .badge-icon {
      color: light(_bg) ? darken(_c, 75%) : #fff
    }
  }
}

.badge-larger { font-size: type-larger }
.badge-large { font-size: type-large }
.badge-small { font-size: type-small }
.badge-smaller { font-size: type-smaller }
