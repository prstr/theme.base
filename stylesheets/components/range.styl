// ------------------------
// Выбор диапазона значений
// ------------------------

.range {
  position: relative;
  margin: 0 -16px;
  padding: gap 16px;

  user-select: none;

  border-radius: border-radius;
}

.range-bar {
  height: 4px;
  background: ui-default;
}

.range-ticks {
  position:relative;
  height: 20px;
}

.range-tick {
  position: absolute;
  top: 0;
  width: 64px;
  margin-left: -32px;

  color: subtle-color;
  text-align: center;
  font-size: type-smaller;

  &::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    width: 2px;
    height: 8px;
    margin-left: -1px;

    background: ui-default-border;
  }
}

.range-tick-0 { left: 0% }
.range-tick-25 { left: 25% }
.range-tick-50 { left: 50% }
.range-tick-75 { left: 75% }
.range-tick-100 { left: 100% }

.range-handles {
  position: relative;
  height: 16px;
}

.range-handle {
  position: absolute;
  top: 0;

  display: block;
  width: 0;
  height: 0;

  cursor: pointer;

  border: 6px solid transparent;
  border-bottom-color: ui-primary;

  &:hover {
    border-bottom-color: ui-warn;
  }
}

.range-handle-left {
  left: 0;
  margin-left: -12px;
  border-right-color: ui-primary;

  &:hover {
    border-right-color: ui-warn;
  }
}

.range-handle-right {
  left: 100%;
  border-left-color: ui-primary;

  &:hover {
    border-left-color: ui-warn;
  }
}
