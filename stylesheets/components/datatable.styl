.datatable {
  width: 100%;

  td, th {
    padding: gap-small;
    border-bottom: 1px solid datatable-border-color;

    font: inherit;
    text-align: left;
  }

  th {
    color: datatable-th-color;
  }

  tbody tr:last-child {
    td, th {
      border-bottom: 0;
    }
  }

  tr.dragging {
    opacity: .5;
  }

  tr.drag-over-before {
    border-top: 4px solid ui-primary
  }

  tr.drag-over-after {
    border-bottom: 4px solid ui-primary
  }

}

.datatable-small {

  td, th {
    padding: (gap-small / 2)
  }

}

@media (max-width: screen-small-max) {

  .datatable {

    &, tfoot, tbody, tr {
      display: block;
    }

    thead {
      display: none;
    }

    tbody {
      td, th {
        display: flex;
        align-items: center;
        border-bottom: 0;
        width: auto;

        &::before {
          content: attr(title);
          flex: 1;
        }
      }

      tr:not(:last-child) {
        border-bottom: 1px solid datatable-border-color;
      }
    }

  }

  .datatable-cell {
    flex: 1;
  }

}

.datatable-move-handle {
  cursor: move;
}
