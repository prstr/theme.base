// Семантический редактор
// ----------------------

.rho-editor {
  position: relative;
}

.rho-editor-toolbar {
  position: absolute;
  z-index: 10;
  top: 4px;
  right: 4px;
}

.rho-editor-preview {
  position: absolute;
  z-index: 20;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;

  overflow-y: auto;

  padding: 1em;
  border-radius: border-radius;
  cursor: pointer;
  background: rgba(255,255,255,.95);
}
