// ----------------------
// Семантический редактор
// ----------------------

.rho-editor {
  position: relative;
}

.rho-editor-toolbar {
  position: absolute;
  z-index: 10;
  top: 4px;
  right: 4px;
}

.rho-editor-preview {
  position: absolute;
  z-index: 20;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;

  overflow-y: auto;

  padding: .25em .5em;
  border-radius: border-radius;
  cursor: pointer;
  background: rgba(255,255,255,.95);
}

.rho-editor-opaque {

  textarea, .rho-editor-preview {
    border: 0;
    padding: 0;
  }

  textarea {
    background: transparent;
    resize: none;

    &:focus {
      box-shadow: none;
    }
  }
}
