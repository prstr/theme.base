// --------------------------
// Навигация «Хлебные крошки»
// --------------------------
//
// Навигационная строка вида «Главная» -> «Категория» -> «Подкатегория» -> ...

.breadcrumbs {
  padding: .25em 0;
}

.breadcrumbs-item {
  display: inline-block;
  font-size: type-small;

  &::after {
    content: '\e93c';
    margin: 0 .5em;

    color: subtle-color;
    font-family: Linearicons;
    font-size: 10px;
  }
}
