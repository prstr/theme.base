// Базовая тема включает минимум стилей для упрощения разработки
// уникального дизайна.

.store-layout {

}

.store-header {
  background: ui-primary;
  color: ui-primary-text;
}

.store-header-title {
  font-size: type-larger;
}

.store-header-search {
  border: 0;
}

.store-topnav {
  border-bottom: 1px solid #eee;
}

.store-topnav-link {
  display: inline-block;
}

.store-topnav-link + .store-topnav-link {
  margin-left: gap;
}

.store-topnav-badge {
  display: inline-block;
  padding: 0 .5em;
  border-radius: 32px;

  background: ui-primary;
  color: ui-primary-text;
}
