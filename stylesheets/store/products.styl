// -----------------
// Коллекции товаров
// -----------------

.products-list-item {
  position: relative;
  z-index: 1;

  display: block;
  box-sizing: border-box;
  padding: gap;
  border-radius: border-radius;

  text-align: center;

  transform: scale(1);
  transition: transform .3s;

  &:hover {
    transform: scale(1.2);
    z-index: 5;
  }

}

.products-list-photo {
  height: 240px;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: contain;
}

.products-list-price {
  color: body-color;
}
