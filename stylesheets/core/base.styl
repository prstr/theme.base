// -------------
// Базовые стили
// -------------
//
// Базовые стили включают правила, применяемые к тэгам
// (html, p, ul, ol, li, h1, h2, h3 и т.д.).

html, body {
  overflow-x: hidden;
  font: font-weight font-size/line-height font-family;
  background: body-background;
  color: body-color;
  text-rendering: optimizeLegibility;
}

a {
  text-decoration: none;
  color: link-color;
  &:hover {
    color: link-hover-color;
  }
}

strong, .strong {
  font-weight: bold;
  color: strong-color;
}

em, .em {
  font-style: italic;
  color: em-color;
}

strike, .strike {
  text-decoration: line-through
}

img {
  vertical-align: middle;
  max-width: 100%;
}

p, ol, ul, dl, li, dt, dd {
  margin: gap 0;
}

ul, ol {
  margin: gap-small 0;
}

h1, h2, h3 {
  margin: gap-small 0;
  line-height: 1.25;

  small, .small {
    font-weight: font-weight;
    font-size: 60%;
    color: subtle-color;
  }
}

h4, h5, h6 {
  margin: gap-small 0;

  small, .small {
    font-weight: font-weight;
    font-size: 60%;
    color: subtle-color;
  }
}

dl, dt, dd {
  display: block;
}

dt {
  font-weight: bold;
}

dd {
  margin-left: 1em;
  padding-left: 1em;
  border-left: 4px solid ui-default;
}

hr {
  margin: gap 0;
  border: 0;
  border-bottom: 1px solid hr-color;

  &.bold {
    border-width: 4px;
  }
}

input[type='checkbox'], input[type='radio'] {
  margin: 0;
  padding: 0;
}

label {
  cursor: pointer;
}
