a
  text-decoration: none
  color: link-color
  &:hover
    color: link-hover-color

strong, .strong
  font-weight: 600
  color: strong-color

em, .em
  font-style: italic
  color: em-color

strike, .strike
  text-decoration: line-through

img
  vertical-align: middle
  max-width: 100%

p, ol, ul, dl, li, dt, dd
  margin: 1em 0

ul, ol
  &.terse li
    margin: .25em 0

h1, h2, h3
  margin: 1em 0 .5em

  small, .small
    font-weight: font-weight
    font-size: 60%
    color: text-subtle-color

h4, h5, h6
  margin: .5em 0

  small, .small
    font-weight: font-weight
    font-size: 60%
    color: text-subtle-color

h1
  font: h1-font-style h1-font-weight h1-font-size/h1-line-height h1-font

h2
  font: h2-font-style h2-font-weight h2-font-size/h2-line-height h2-font

h3
  font: h3-font-style h3-font-weight h3-font-size/h3-line-height h3-font

h4
  font: h4-font-style h4-font-weight h4-font-size/h4-line-height h4-font

h5
  font: h5-font-style h5-font-weight h5-font-size/h5-line-height h5-font

h6
  font: h6-font-style h6-font-weight h6-font-size/h6-line-height h6-font

hr
  margin: 1em 0
  border: 0
  border-bottom: 1px solid hr-color
  &.bold
    border-width: 4px

.loading
  text-align: center
  font-size: 120%
  color: text-subtle-color
  margin: 1em 0

.subtle
  font-style: italic
  color: text-subtle-color

small, .small
  font-size: type-small
