[ui-editor]
  outline: 0
  min-height: 120px

.medium-editor-toolbar, .medium-editor-anchor-preview {
  position: absolute
  z-index: 0
  top: 0
  left: 0

  visibility: hidden
  opacity: 0
  transition: transform .3s, opacity .3s

  &::after {
    content: ''

    position: absolute
    left: 50%
    margin-left: -8px

    display: block
    border: 8px solid transparent
  }
}

.medium-editor-toolbar-actions {
  margin: 0
  padding: 0
  list-style: none

  li {
    margin: 0
    display: inline-block
    margin-left: -1px
  }
}

.medium-editor-action {

  position: relative;
  z-index: 1;

  display: inline-block;
  box-sizing: border-box;
  padding: .25em .75em;
  height: 2.1em;

  vertical-align: middle;
  outline: 0;
  cursor: pointer;
  touch-action: manipulation;
  user-select: none;

  border-width: 1px;
  border-style: solid;
  border-color: ui-primary-border;
  border-bottom-color: darken(ui-primary-border, 15%);
  border-radius: 0

  background: ui-primary;

  color: ui-primary-text;
  text-shadow: light(ui-primary-text) ? 0 1px 1px darken(ui-primary-border, 25%) : none;
  font: inherit;
  white-space: nowrap

  &::-moz-focus-inner {
    border: 0;
    padding: 0;
  }

  i {
    position: relative;
    top: -1px;
    display: inline-block;
    vertical-align: middle;
  }

  i + *, * + i {
    margin-left: .37em;
  }

  li:first-child button {
    border-top-left-radius: border-radius
    border-bottom-left-radius: border-radius
    margin-left: 0
  }

  li:last-child button {
    border-top-right-radius: border-radius
    border-bottom-right-radius: border-radius
  }

  &:focus, &:hover {
    color: ui-primary-text;
    background: darken(ui-primary, 10%);
  }

  &:active, &.active {
    background: darken(ui-primary, 15%);
    border-color: darken(ui-primary-border, 15%);
    box-shadow: 0 3px 5px darken(ui-primary-border, 15%) inset
    z-index: 2;
  }
}

.medium-editor-toolbar {
  transform: translateY(16px)
  &::after {
    top: 100%
    border-top-color: darken(ui-primary, 15%)
  }
}

.medium-editor-anchor-preview {
  padding: 4px 12px
  border: 1px solid darken(ui-primary, 15%)
  border-radius: border-radius

  transform: translateY(-16px)
  background: ui-primary
  color: ui-primary-text
  text-align: center

  &::after {
    bottom: 100%
    left: 50%
    border-bottom-color: darken(ui-primary, 15%)
  }
}

.medium-editor-toolbar-active,
.medium-editor-anchor-preview-active {
  z-index: 2000
  visibility: visible
  opacity: 1
  transform: translateY(0)
}

.medium-editor-toolbar-form {
  display: none

  border: 1px solid darken(ui-primary, 15%)
  border-radius: border-radius
  background: ui-primary
  text-align: center

  a {
    display: inline-block
    padding: 4px 12px
    color: ui-primary-text
  }
}

.medium-editor-placeholder {
  position: relative

  &::after {
    content: attr(data-placeholder)
    position: absolute
    top: 0
    left: 0

    color: subtle-color
    font-style: italic
    white-space: pre-wrap
  }
}