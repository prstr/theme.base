// ----------------------
// Экран с пустым списком
// ----------------------
//
// Используется на страницах вида «Ничего не найдено»,
// «Добавьте первый товар» и т.д.

.empty-list {

  margin-top: 2em
  text-align: center
}

.empty-list-icon {
  padding: 0.15em
  font-size: 8em
  border: 4px solid ui-primary
  border-radius: 128px
  color: ui-primary
  text-align: center
}

.empty-list-message {
  font-size: 1.2em
}
