.featured-icon
  display: inline-block
  border-radius: 1000px
  border: 4px solid lighten(brand-primary, 50%)
  color: lighten(brand-primary, 50%)
  width: 120px
  height: 120px
  line-height: 120px
  font-size: 64px

.inset
  color: #000
  box-shadow: 0 1px 0 #fff
  opacity: .25

.move-handle
  cursor: move
  color: text-subtle-color
  font-size: type-small
