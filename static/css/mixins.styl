clearfix()
  &::before, &::after
    content:''
    display: table
  &::after
    clear: both

// Magic numbers in heights are computed perceptively,
// due to several bugs if FF
// which result in incorrect rendering of text inside selects

ctl()
  display: inline-block
  position: relative
  margin: 0
  padding: 6px 12px
  height: 34px
  border: 1px solid #ddd
  box-sizing: border-box
  border-radius: radius
  outline: 0
  font-family: font-main
  font-size: font-size
  white-space: nowrap
  text-decoration: none
  text-transform: none
  overflow: visible
  appearance: none
  &::-moz-focus-inner
    border: 0
    padding: 0

  &.small
    height: 28px
    padding: 4px 8px
    font-size: type-small
  &.large
    height: 40px
    padding: 6px 16px
    font-size: type-large

spaced()
  & + *
    margin-left: (gutter / 2)
