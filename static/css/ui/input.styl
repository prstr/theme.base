input[type='text'],
input[type='password'],
input[type='number'],
input[type='email'],
input[type='url'],
input[type='search'],
select,
textarea
  ctl()
  display: block
  appearance: none
  width: 100%
  margin: 0
  font: inherit
  line-height: 100%        // fix for misplaced placeholder
  background: input-bg
  color: input-color
  border-color:input-border
  transition: .3s box-shadow, .3s border-color

  &::-webkit-input-placeholder
    line-height: normal
  &.inline
    width: auto
    display: inline-block
  &.small
    padding: 2px 6px
    font-size: type-small
  &.large
    font-size: type-large
  &.larger
    font-size: type-larger
  &.largest
    font-size: type-largest

  &.ng-dirty.ng-invalid
    border-color: brand-critical
    box-shadow: 0 0 6px rgba(brand-critical, .5)
  &:focus, &.track.ng-dirty
    border-color: brand-primary
    box-shadow: 0 0 6px rgba(brand-primary, .5)
  &.hollow
    border-radius: 0
    border-width: 0 0 1px
    padding: 6px 0
    &:focus, &.track.ng-dirty
      box-shadow: 0 6px 6px -6px rgba(brand-primary, .5)
  &[disabled]
    background: brand-default
    color: text-subtle-color

input[type='checkbox'],
input[type='radio']
  font-size: inherit
  margin: 0

  & + span, span + &
    margin-left: 8px

.input-group
  width:100%
  display: table
  border-collapse: separate
  white-space: nowrap
  box-sizing: border-box
  > input, > .control
    display: table-cell
    vertical-align: middle
    box-sizing: border-box
    border-radius: 0
    &:first-child
      border-top-left-radius: radius
      border-bottom-left-radius: radius
    &:last-child
      border-top-right-radius: radius
      border-bottom-right-radius: radius
  > .control
    background: brand-default
    padding-left: 12px
    padding-right: 12px
    border: 1px solid input-border
    text-align: center
    width: 1%
    &:first-child
      border-right: 0
    &:last-child
      border-left: 0
