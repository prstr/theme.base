// ----------------
// Адаптивные сетки
// ----------------

.grid {
  display: flex;
  flex-flow: row wrap;
  overflow: hidden;
}

.grid-align-baseline { align-items: baseline }
.grid-align-center { align-items: center }

.grid-gutters {
  margin: -(gap / 2);

  &.block {
    margin-top: (gap / 2);
    margin-bottom: (gap / 2);
  }

  > .cell {
    margin: (gap / 2);
  }
}

.grid-rounded {
  border-radius: border-radius;
}

.grid-level-1 {
  box-shadow: 0 0 1px rgba(0,0,0,.5);
  z-index: 10;
}

.grid-level-2 {
  box-shadow: 0 0 3px rgba(0,0,0,.25);
  z-index: 20;
}

.grid-level-3 {
  box-shadow: 0 0 16px rgba(0,0,0,.25);
  z-index: 30;
}

.cell {
  flex: 100%;
  box-sizing: border-box;
}

for i in (1..8) {
  .cell-{i} { flex: i }
  .cell-1of{i} { flex: (100 / i)% }
  .order-{i} { order: i }
}

@media (min-width: screen-medium-min) {
  for i in (1..8) {
    .m-cell-{i} { flex: i }
    .m-cell-1of{i} { flex: (100 / i)% }
    .m-order-{i} { order: i }
  }
}

@media (min-width: screen-large-min) {
  for i in (1..8) {
    .l-cell-{i} { flex: i }
    .l-cell-1of{i} { flex: (100 / i)% }
    .l-order-{i} { order: i }
  }
}
