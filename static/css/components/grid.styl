.grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-align-baseline {
  align-items: baseline;
}

.grid-align-center {
  align-items: center;
}

.grid-justify-center {
  justify-content: center;
}

.grid-justify-space-between {
  justify-content: space-between;
}

.cell {
  flex: 100%
}

@media (min-width: screen-medium-min) {
  for i in (1..4) {
    .m-cell-{i} {
      flex: i;
    }
    .m-order-{i} {
      order: i;
    }
  }
}

@media (min-width: screen-large-min) {
  for i in (1..4) {
    .l-cell-{i} {
      flex: i;
    }
    .l-order-{i} {
      order: i;
    }
  }
}

