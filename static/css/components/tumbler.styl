.tumbler
  ctl()
  spaced()

  width: 48px

  border-radius: 1000px
  transition: .3s all
  cursor: pointer
  user-select: none

  background-color: brand-default
  border-color: darken(brand-default, 15%)
  box-shadow: 0 1px 5px darken(brand-default, 15%) inset
  vertical-align: middle

  &::after
    content:'Â '

  input
    position: absolute
    width: 0
    height: 0
    visibility: hidden

  .knob
    position: absolute
    top: 0
    bottom: 0
    left: 100%

    display: block
    margin-left: -30px
    width: 30px

    transition: .3s all
    box-shadow: ui-shadow
    border-radius: 1000px
    background: brand-blank

  &.small
    width: 40px

    .knob
      width: 26px
      margin-left: -26px

  &.large
    width: 56px

    .knob
      width: 38px
      margin-left: -38px

  &.active
    box-shadow: 0 1px 5px darken(brand-primary, 15%) inset
    background-color: brand-primary
    border-color: darken(brand-primary, 15%)
    color: brand-primary-text

    .knob
      left: 0
      margin-left: 0
