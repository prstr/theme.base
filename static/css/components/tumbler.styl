.tumbler
  ctl()
  transition: .3s all
  cursor: pointer
  user-select: none
  width: 64px
  background-color: brand-default
  border-color: darken(brand-default, 15%)
  box-shadow: 0 1px 5px darken(brand-default, 15%) inset
  border-radius: 1000px
  padding: 4px 0
  &::after
    content:'Â '

  &.small
    width: 48px
    padding: 2px 0
    .knob
      width: 24px
      margin-left: -24px

  input
    position: absolute
    visibility: hidden
    width: 0
    height: 0

  .knob
    position: absolute
    display: block
    top: 0
    bottom: 0
    left: 100%
    width: 32px
    margin-left: -32px
    background: brand-blank
    box-shadow: ui-shadow
    border-radius: radius
    transition: .3s all
    border-radius: 1000px

  &.active
    background-color: brand-primary
    border-color: darken(brand-primary, 15%)
    box-shadow: 0 1px 5px darken(brand-primary, 15%) inset
    color: brand-primary-text

    .knob
      left: 0
      margin-left: 0
