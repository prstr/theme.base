[ui-editor]
  outline: 0
  min-height: 120px

.medium-editor-toolbar, .medium-editor-anchor-preview
  position: absolute
  z-index: 0
  top: 0
  left: 0

  visibility: hidden
  opacity: 0
  transition: transform .3s, opacity .3s

  &::after
    content:''

    position: absolute
    left: 50%
    margin-left: -8px

    display: block
    border: 8px solid transparent

  ul
    margin: 0
    padding: 0
    list-style: none

  li
    margin: 0
    display: inline-block
    margin-left: -1px

  button
    ctl()
    btn(brand-primary, brand-primary-text)
    height: (font-size * 2)
    border-radius: 0

  li:first-child button
    border-top-left-radius: radius
    border-bottom-left-radius: radius
    margin-left: 0

  li:last-child button
    border-top-right-radius: radius
    border-bottom-right-radius: radius

.medium-editor-toolbar
  transform: translateY(16px)
  &::after
    top: 100%
    border-top-color: darken(brand-primary, 15%)

.medium-editor-anchor-preview
  padding: 4px 12px
  border: 1px solid darken(brand-primary, 15%)
  border-radius: radius

  transform: translateY(-16px)
  background: brand-primary
  color: brand-primary-text
  text-align: center

  &::after
    bottom: 100%
    left: 50%
    border-bottom-color: darken(brand-primary, 15%)

.medium-editor-toolbar-active,
.medium-editor-anchor-preview-active
  z-index: 2000
  visibility: visible
  opacity: 1
  transform: translateY(0)

.medium-editor-toolbar-form
  display: none

  border: 1px solid darken(brand-primary, 15%)
  border-radius: radius
  background: brand-primary
  text-align: center

  a
    display: inline-block
    padding: 4px 12px
    color: brand-primary-text

.medium-editor-placeholder
  position: relative

  &::after
    content: attr(data-placeholder)
    position: absolute
    top: 0
    left: 0

    color: text-subtle-color
    font-style: italic
    white-space: pre-wrap

