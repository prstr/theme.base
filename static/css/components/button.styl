.btn {
  position: relative;
  z-index: 1;

  display: inline-block;
  padding: .25em .75em;

  appearance: none;
  vertical-align: middle;

  border-width: 1px;
  border-style: solid;
  border-radius: border-radius;
  font: inherit;
  white-space: nowrap

  &::-moz-focus-inner {
    border: 0;
    padding: 0;
  }

  &:active, &.active {
    z-index: 2;
  }

}

.btn-group {
  display: inline-flex;
  vertical-align: middle;

  .btn {
    margin-left: -1px;
    border-radius: 0;

    &:first-child {
      border-top-left-radius: border-radius;
      border-bottom-left-radius: border-radius;
    }
    &:last-child {
      border-top-right-radius: border-radius;
      border-bottom-right-radius: border-radius;
    }
  }
}
