// Arsenal

@font-face {
  font-family: 'Arsenal';
  font-style: normal;
  font-weight: normal;
  src:  local('Arsenal'),
  local('Arsenal Regular'),
  url('/fonts/Arsenal-Regular.ttf');
}

@font-face {
  font-family: 'Arsenal';
  font-style: normal;
  font-weight: bold;
